/* pages/cart/cart.wxss */
.cart_box{
  
}
.cart_item{
  display: flex;
  height:95px;
  border-bottom:1px solid #ddd;
}
.cart_left{
  width:110px;
  position: relative;
}
.check_icon{
  margin:0 5px;
  margin-top:35px;
}
.cart_img{
  width:65px;
  height:65px;
  position: absolute;
  top:15px;
  left:40px;
}
.cart_right{
  flex:1;
  padding-top:15px;
  position: relative;
}
.cart_item_title{
  font-size:15px;
}
.cart_item_title .price{
  float:right;
  margin-right:10px;
}
.actnumber{
  position: absolute;
  bottom:10px;
  width:100%;
}
.jian{
  font-weight:bold;
  font-size:15px;
  margin:0 10px;
}
.count{
  width:35px;
  text-align:center;
  font-size:15px;
  display: inline-block;
}
.add{
  font-weight:bold;
  font-size:16px;
  margin:0 10px;
  padding:4px;
}
.del{
  position: absolute;
  right:10px;
  margin-right:10px;
}
.cart_footer{
  position: fixed;
  font-size:14px;
  bottom:0px;
  background:#AB956D;
  height:40px;
  width:100%;
  color:#fff;
}
.total-select{
  margin:8px 5px;
}
.select_all{
 position: relative;
 top:-5px;
}
.cart_footer_price{
  float:right;
}
.footer_price{
  height:40px;
  line-height: 40px;
  float:right;
  font-size:15px;
  margin-right:15px;
}
.footer_icon{
  float:right;
  margin-right:10px;
}